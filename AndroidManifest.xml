<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.isobeef.jd.flattroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.isobeef.jd.flattroid.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Register">
            <intent-filter>
				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
				<data android:scheme="flattr4j" android:host="org.isobeef.jd.flattroid"/>
			</intent-filter>

        </activity>
        <activity
            android:name=".activity.ThingActivity">
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="org.isobeef.jd.flattroid.activity.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
	            <data 
	                android:scheme="http"
	                android:host="flattr.com"
	                android:pathPrefix="/thing"/>
	            <data 
	                android:scheme="https"
	                android:host="flattr.com"
	                android:pathPrefix="/thing"/>
	    	</intent-filter>
        </activity>
        <activity
            android:name="org.isobeef.jd.flattroid.activity.UserActivity">
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="org.isobeef.jd.flattroid.activity.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
	            <data 
	                android:scheme="http"
	                android:host="flattr.com"
	                android:pathPrefix="/profile"/>
	            <data 
	                android:scheme="https"
	                android:host="flattr.com"
	                android:pathPrefix="/profile"/>
	    	</intent-filter>
        </activity>
    </application>

</manifest>